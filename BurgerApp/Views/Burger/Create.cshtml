@model BurgerApp.Services.Models.BurgerViewModel

<h2>Create Burger</h2>
@*ova mi e neso kopi paste od predhodnava a i sekako bustrap kopiranje da rabotit maksimalno samo so koristime promeni na akciite i vo asp-for i na labelov*@
<form asp-action="Create">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsVegetarian" />
        <label class="form-check-label">Is Vegetarian</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsVegan" />
        <label class="form-check-label">Is Vegan</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="HasFries" />
        <label class="form-check-label">Has Fries</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index">Cancel</a>
</form>
