@model BurgerApp.Services.Models.BurgerViewModel

<h2>Delete Burger</h2>

<p>Are you sure you want to delete this burger?</p>
@*ova da bidam iskren mi e copy zoso nemase sansi da se zamaram so Html da pisam racno ,samo akciite mi se od mene dodaeni *@
<div>
    <h4>Burger</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Is Vegetarian</dt>
        <dd class="col-sm-10">@Model.IsVegetarian</dd>
        <dt class="col-sm-2">Is Vegan</dt>
        <dd class="col-sm-10">@Model.IsVegan</dd>
        <dt class="col-sm-2">Has Fries</dt>
        <dd class="col-sm-10">@Model.HasFries</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Cancel</a>
    </form>
</div>

