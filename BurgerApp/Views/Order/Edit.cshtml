
@model BurgerApp.Models.OrderViewModel

<h1>Edit Order</h1>

<form asp-controller="Order" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="FullName">Full Name:</label>
        <input id="FullName" name="FullName" type="text" class="form-control" asp-for="FullName" required />
    </div>

    <div class="form-group">
        <label for="Address">Address:</label>
        <input id="Address" name="Address" type="text" class="form-control" asp-for="Address" required />
    </div>

    <div class="form-group">
        <label for="IsDelivered">Is Delivered:</label>
        <input id="IsDelivered" name="IsDelivered" type="checkbox" class="form-check-input" asp-for="IsDelivered" />
    </div>

    <div class="form-group">
        <label for="BurgerId">Burger:</label>
        <select id="BurgerId" name="BurgerId" class="form-control" asp-for="Burger.Id" required>
            <option value="">Select a Burger</option>
            @foreach (var burger in ViewBag.Burgers)
            {
                <option value="@burger.Id">@burger.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Location">Location:</label>
        <input id="Location" name="Location" type="text" class="form-control" asp-for="Location" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Order" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
